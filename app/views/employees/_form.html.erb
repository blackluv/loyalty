<div class="form-horizontal">
<%= form_for @employee do |f| %>
  <%= render "shared/employee_errors" %>
  <div class="form-group">
    <%= f.text_field :user_name, placeholder: "User Name", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.password_field :password, placeholder: "Password", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.password_field :password_confirmation, placeholder: "Password Confirmation", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.password_field :passcode, placeholder: "Passcode", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit "Enter", class: "btn-primary btn-lg" %>
  </div>
<% end %>
</div>