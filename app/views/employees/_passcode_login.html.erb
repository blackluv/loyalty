<div class="row">
  <div class="form-inline">
    <%= form_tag(passcode_login_employee_path, method: :get) do %>
      <div class="form-group">
      <%= password_field_tag :passcode, nil, placeholder: "Staff Passcode", required: true, pattern: "[0-9]{4}", title: "passcode must be 4 digits", maxlength: "4", class: "input-lg" %>
      </div>
      <div class="form-group">
        <%= submit_tag "Enter", class: "btn btn-primary btn-lg" %>
      </div>
    <% end %>
  </div>
</div>