<h1>Create a Customer</h1>

<%= form_for(@customer) do |f| %>
  <%= f.label :first_name %>
  <%= f.text_field :first_name %><br>

  <%= f.label :last_name %>
  <%= f.text_field :last_name %><br>

  <%= f.label :phone %>
  <%= f.text_field :phone %><br>

  <%= f.label :email %>
  <%= f.text_field :email %><br>

  <%= f.label :zip_code %>
  <%= f.text_field :zip_code %><br>

  <%= f.label :birthday %>
  <%= f.date_field :birthday %><br>

  <%= f.submit %>

<% end %>
