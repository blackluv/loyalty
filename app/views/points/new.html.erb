<h1>New Points </h1>

<h2>Add Points</h2>
<%= form_for([@customer, @point]) do |f| %>
  <%= f.label :point_total %>
  <%= f.text_field :point_total %>
  <%= f.submit %>
<% end %>

<!-- working on this form to delete point by adding negative automatically -->
<h2>Delete Points</h2>
<%= form_for([@customer, @point], method: "delete") do |f| %>
  <%= f.label :point_total %>
  <%= f.text_field :point_total %>
  <%= f.submit %>
<% end %>

<%= link_to "Back", customer_path(@customer) %>