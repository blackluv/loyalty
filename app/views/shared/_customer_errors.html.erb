<% if @customer.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      <div>
        The form contains <%= pluralize(@customer.errors.count, "error") %>:
      </div>
      <ul>
      <% @customer.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  </div>
<% end %>